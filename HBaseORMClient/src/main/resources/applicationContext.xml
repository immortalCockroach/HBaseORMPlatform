<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="client"/>

    <dubbo:application name="provider_serivce_consumer"/>

    <dubbo:consumer timeout="500000" />

    <!-- 使用multicast广播注册中心暴露发现服务地址 -->
    <dubbo:registry address="zookeeper://localhost:21811"/>

    <!-- 生成远程服务代理，可以和本地bean一样使用demoService -->
    <dubbo:reference id="queryService" interface="com.immortalcockroach.hbaseorm.api.QueryService"/>
    <dubbo:reference id="insertService" interface="com.immortalcockroach.hbaseorm.api.InsertService"/>
    <dubbo:reference id="createService" interface="com.immortalcockroach.hbaseorm.api.CreateService"/>

</beans>